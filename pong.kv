#:kivy 1.0.9

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    pop_up: mess


    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

                
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50            
        text: str(root.player1.score)
            
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center
            
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y

    Message:
        id: mess
        size: root.pop_up.exist*500,root.pop_up.exist*200
        x: root.center_x - 250
        y: root.center_y - 100
    
    Label:
        font_size: 50 * root.pop_up.exist
        color: 0, 0, 0, 1
        center_x: root.center_x
        center_y: root.center_y            
        text: str(root.pop_up.text)

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size


<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Message>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
    
    
