#:kivy 1.0.9

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    pop_up: pop
    pause: pause


    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

                
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50            
        text: str(root.player1.score)
            
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center
            
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y

    Message:
        id: pop
        size: root.pop_up.exist*root.width / 3,root.pop_up.exist*root.height / 3
        x: root.width / 3
        y: root.height / 3
        Label:
            font_size: 50 * root.pop_up.exist
            color: 0, 0, 0, 1
            center_x: root.center_x
            center_y: root.center_y            
            text: str(root.pop_up.text)
    Button:
        text: "||"
        size: 20, 20
        center: root.width / 2 , root.height / 2
        on_press: 
            root.stop_ball()
            root.pause.exist = 1


    Message:
        id: pause
        size: root.pause.exist*root.width / 3,root.pause.exist*root.height / 3
        x: root.width / 3
        y: root.height / 3
        BoxLayout:
            size: root.pause.exist*root.width/3, root.pause.exist*root.height/3
            x: root.width / 3
            y: root.height / 3  
            orientation: 'horizontal'
            Button:
                text: 'return'
                font_size: root.pause.exist*40
                background_color: (1, 1, 1, root.pause.exist)
                on_press: root.click('r')
            Button:
                text: 'start\nover'
                font_size: root.pause.exist*40
                background_color: (1, 1, 1, root.pause.exist)
                on_press: root.click('s')


<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size


<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Message>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
    
    
